<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.50"/>

    <TextView
            android:id="@+id/numberOfCardsLeft_Label"
            android:text="Cards Left "
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/numberOfDrinksLeft"
            app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
            android:id="@+id/numberOfCardsLeft"
            android:text="1"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/numberOfDrinksLeft_Label"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/numberOfDrinksLeft_Label"
            android:text="Drinks Left "
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/numberOfDrinksLeft"
            app:layout_constraintTop_toBottomOf="@id/numberOfCardsLeft_Label"/>

    <TextView
            android:id="@+id/numberOfDrinksLeft"
            android:text="1"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/numberOfCardsLeft"
            app:layout_constraintStart_toEndOf="@id/numberOfCardsLeft_Label"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>